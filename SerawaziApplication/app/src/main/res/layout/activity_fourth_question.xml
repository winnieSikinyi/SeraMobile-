<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context=".ui.LevelTwoActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="wrap_content"
        android:layout_height="140dp"
        android:layout_gravity="center"
        android:background="@drawable/slanted_background"
        android:rotation="30"
        app:cardBackgroundColor="#9C27B0"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">


        <TextView

            android:id="@+id/wl2"
            android:layout_width="102dp"
            android:layout_height="121dp"
            android:padding="16dp"
            android:rotation="-30"
            android:text="@string/l2_bill_of_rights"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Display3"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>


    <ImageView
        android:id="@+id/ivScenario3"
        android:layout_width="309dp"
        android:layout_height="279dp"
        android:src="@drawable/vectorim"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.951"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.106" />

    <ImageView
        android:id="@+id/ivGirl3"
        android:layout_width="117dp"
        android:layout_height="132dp"
        android:layout_marginTop="264dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.091"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/avatartwo" />

    <ImageView
        android:id="@+id/ivGamer3"
        android:layout_width="141dp"
        android:layout_height="148dp"
        android:layout_marginTop="332dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.94"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/newcharacterwoman" />


    <ImageView
        android:id="@+id/ivchat1"
        android:layout_width="64dp"
        android:layout_height="63dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:rotation="-30"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivGirl3"
        app:srcCompat="@drawable/chatbot" />

    <Button
        android:id="@+id/btnCorrect9"
        android:layout_width="356dp"
        android:layout_height="77dp"
        android:backgroundTint="#9C27B0"
        android:shadowColor="@color/cardview_dark_background"
        android:text="Article 38 of the Constitution guarantees the right to participate in free and fair elections. Robert's right to vote should be upheld."
        android:textColorHighlight="#9C27B0"
        android:textColorLink="#9C27B0"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.946"
        app:rippleColor="#9C27B0" />

    <Button
        android:id="@+id/btnWrong3"
        android:layout_width="359dp"
        android:layout_height="82dp"
        android:layout_marginBottom="152dp"
        android:backgroundTint="#9C27B0"
        android:text="@string/the_university_is_right_to_restrict_her_given_that_she_is_a_student_of_the_institution_and_must_do_what_the_university_dictates"
        android:textColorHighlight="#9C27B0"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvque2"
        android:layout_width="233dp"
        android:layout_height="163dp"
        android:text="Robert, a citizen,from Central of Kenya  is denied the right to vote in an election without valid reasons.He is escorted outside of polling stations.He is threatened to be locked behind bars if he shows up again. Do you think Robert deserves to vote. What right according to the constituition does he have ?  "
        android:textAlignment="center"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.808"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.142" />


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="115dp"
        android:layout_height="92dp"
        android:layout_marginTop="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.564"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvque2"
        app:srcCompat="@drawable/vecim" />

    <TextView
        android:id="@+id/tvWhatDoYouThink"
        android:layout_width="55dp"
        android:layout_height="53dp"
        android:text="\u003F\u003F"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.528"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.441" />


